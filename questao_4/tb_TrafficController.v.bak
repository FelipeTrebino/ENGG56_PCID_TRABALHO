`timescale 1ns/1ps

module tb_TrafficController;
    reg A, B, C, D;
    wire L_O, N_S;

    // Instancia o DUT (Device Under Test)
    TrafficController uut (
        .A(A), .B(B), .C(C), .D(D),
        .L_O(L_O), .N_S(N_S)
    );

    initial begin
        $display("Time | A B C D | L_O N_S | Status");
        $display("-----------------------------------");
        
        // Caso 1: Tudo vazio (Regra: L_O Verde)
        {A, B, C, D} = 4'b0000; #10;
        $display("%4t | 0 0 0 0 |  %b   %b  | OK (Default Main)", $time, L_O, N_S);

        // Caso 2: Apenas Secund√°ria (Regra: N_S Verde)
        {A, B, C, D} = 4'b1000; #10;
        $display("%4t | 1 0 0 0 |  %b   %b  | OK (Secondary)", $time, L_O, N_S);

        // Caso 3: Apenas Principal (Regra: L_O Verde)
        {A, B, C, D} = 4'b0010; #10;
        $display("%4t | 0 0 1 0 |  %b   %b  | OK (Main)", $time, L_O, N_S);

        // Caso 4: Conflito - Carros em ambas (Prioridade: L_O Verde)
        {A, B, C, D} = 4'b1010; #10;
        $display("%4t | 1 0 1 0 |  %b   %b  | OK (Priority Main)", $time, L_O, N_S);
        
        $stop;
    end
endmodule